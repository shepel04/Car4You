<Window x:Class="Car4You.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Car4You.MVVM.ViewModel"        
        xmlns:local="clr-namespace:Car4You"
        mc:Ignorable="d"
        Title="" 
        Height="460" 
        Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <!--End of window properties-->

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>



    <Border Background="#1A734A" 
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="667*"/>                
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="21" />
                <RowDefinition Height="54"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Row="0" 
                       Grid.ColumnSpan="4"
                       Fill="#252526"
                       RadiusX="15"
                       RadiusY="40" Margin="5,0,5,0" MouseDown="TopPanel_MouseDown" MouseMove="TopPanel_MouseMove" MouseUp="TopPanel_MouseUp"/>

            <!-- Left-Top label-->
            <TextBlock Text="Wheels4You"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="40,10,0,0" Grid.Row="1" Height="29" Width="118"/>



            <StackPanel Grid.Row="2" >


                <RadioButton Content="Головна"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" 
                             Width="200"
                             IsChecked="True"
                             Margin="0,0,0,0"
                             Command="{Binding HomeViewCommand}">
                    <RadioButton.Tag>
                        <BitmapImage UriSource="/Images/homeIcon.png"/>
                    </RadioButton.Tag>
                </RadioButton>


                <RadioButton Content="Пошук"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Width="200">
                    <RadioButton.Tag>
                        <BitmapImage UriSource="/Images/searchIcon.png"/>
                    </RadioButton.Tag>
                </RadioButton>


                <RadioButton Content="Налаштування"
                            Height="50"
                            Foreground="White"
                            FontSize="14"
                            Style="{StaticResource MenuButtonTheme}"
                            Width="200"
                            Command="{Binding SettingsViewCommand}">
                    <RadioButton.Tag>
                        <BitmapImage UriSource="/Images/settingsIcon.png"/>
                    </RadioButton.Tag>
                </RadioButton>


            </StackPanel>

